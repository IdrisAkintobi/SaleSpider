generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id          @default(cuid()) 
  email    String   @unique
  name     String
  password String
  role     Role
}

enum Role {
  SUPER_ADMIN
  MANAGER
  CASHIER
}

model Product {
  id             String   @id          @default(cuid()) // Unique identifier, default is cuid for auto-generation
  name           String   @unique
  price          Float
  quantity       Int
  lowStockMargin Int
  imageUrl       String
  dateAdded      DateTime
  gtin           String?  @unique // Optional field for GTIN (Global Trade Item Number)
}
