# SaleSpider Environment Variables (Example)
# Copy this file to `.env` (local dev) or configure in your hosting provider.
# Notes:
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# - Booleans are strings: "true" or "false".
# - Comma-separated lists have no spaces, e.g. A,B,C

# =============================
# Database
# =============================
# Prisma uses this to connect to your database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/salespider?schema=public"

# =============================
# Core App Settings (Backend)
# =============================
APP_NAME="SaleSpider"
APP_LOGO=""
PRIMARY_COLOR="#0f172a"
SECONDARY_COLOR="#3b82f6"
ACCENT_COLOR="#f59e0b"
CURRENCY="NGN"
CURRENCY_SYMBOL="₦"
VAT_PERCENTAGE="7.5"
TIMEZONE="Africa/Lagos"
DATE_FORMAT="dd/MM/yyyy"
TIME_FORMAT="HH:mm"
LANGUAGE="en"
THEME="light"              # one of: light,dark,auto
MAINTENANCE_MODE="false"
SHOW_DELETED_PRODUCTS="false"
# Comma-separated list of PaymentMode enum values (CASH,CARD,BANK_TRANSFER,CRYPTO,OTHER)
ENABLED_PAYMENT_METHODS="CASH,CARD,BANK_TRANSFER,CRYPTO,OTHER"

# =============================
# Public App Settings (Frontend)
# =============================
NEXT_PUBLIC_APP_NAME="SaleSpider"
NEXT_PUBLIC_APP_LOGO=""
NEXT_PUBLIC_PRIMARY_COLOR="#0f172a"
NEXT_PUBLIC_SECONDARY_COLOR="#3b82f6"
NEXT_PUBLIC_ACCENT_COLOR="#f59e0b"
NEXT_PUBLIC_CURRENCY="NGN"
NEXT_PUBLIC_CURRENCY_SYMBOL="₦"
NEXT_PUBLIC_VAT_PERCENTAGE="7.5"
NEXT_PUBLIC_TIMEZONE="Africa/Lagos"
NEXT_PUBLIC_DATE_FORMAT="dd/MM/yyyy"
NEXT_PUBLIC_TIME_FORMAT="HH:mm"
NEXT_PUBLIC_LANGUAGE="en"
NEXT_PUBLIC_THEME="light"         # one of: light,dark,auto
NEXT_PUBLIC_MAINTENANCE_MODE="false"
NEXT_PUBLIC_SHOW_DELETED_PRODUCTS="false"
# Must mirror the backend list when overriding
NEXT_PUBLIC_ENABLED_PAYMENT_METHODS="CASH,CARD,BANK_TRANSFER,CRYPTO,OTHER"

# =============================
# Auth / Security
# =============================
# Required for JWT signing/verification – set to a strong random string in prod
JWT_SECRET="dev-secret-change-me"
# e.g. 12h, 7d, 3600s
TOKEN_EXPIRY="12h"
# Use secure cookies (https) – set to "true" in prod; can be "false" in local dev
COOKIE_SECURE="false"

# Initial SUPER ADMIN seed (used by prisma/seeds)
SUPER_ADMIN_EMAIL="admin@salespider.com"
SUPER_ADMIN_PASSWORD="Password123#"

# =============================
# Logging & Environment
# =============================
# LOG_LEVEL: one of trace,debug,info,warn,error,fatal,silent
LOG_LEVEL="info"
# NODE_ENV is usually set by the runtime (development|production|test)
# NODE_ENV="development"

# =============================
# Next.js / Dev
# =============================
# Additional allowed dev origins (comma-separated). Example: foo.local,bar.local
DEV_ORIGINS=""

# =============================
# AI / LLM Providers
# =============================
# Google AI Studio API key for Gemini models (server-side only; do NOT expose publicly)
GEMINI_API_KEY=""
