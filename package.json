{
  "name": "salespider",
  "description": "Salespider is a store inventory, sales, and staff management system",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IdrisAkintobi/SaleSpider.git"
  },
  "bugs": {
    "url": "https://github.com/IdrisAkintobi/SaleSpider/issues"
  },
  "homepage": "https://github.com/IdrisAkintobi/SaleSpider#readme",
  "keywords": [
    "inventory-management",
    "sales-management",
    "pos-system",
    "retail",
    "ai-insights",
    "nextjs",
    "typescript",
    "postgresql"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:https": "next dev --turbopack --experimental-https -p 443",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "build": "next build --turbopack",
    "build:webpack": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "analyze": "ANALYZE=true npm run build",
    "seed": "tsx --env-file .env prisma/seeds/index.ts",
    "seed:prod": "npx tsx prisma/seeds/seed-production.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.8.0",
    "@hookform/resolvers": "^4.1.3",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-query": "^5.66.0",
    "@tanstack/react-query-devtools": "^5.80.6",
    "argon2": "^0.43.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "geist": "^1.3.1",
    "genkit": "^1.8.0",
    "jose": "^6.0.11",
    "lucide-react": "^0.475.0",
    "next": "^15.3.2",
    "next-themes": "^0.3.0",
    "pino": "^9.9.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^10.0.0",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.10",
    "eslint": "9.27.0",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.2.4",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "prisma": "^6.13.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5",
    "vitest": "^4.0.10",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=24"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
